server.port=8080
spring.application.name=QuanLySach

# Database Configuration (PostgreSQL)
# Thay đổi các giá trị sau theo cấu hình PostgreSQL của bạn
spring.datasource.url=jdbc:postgresql://localhost:5432/quanlysach
spring.datasource.username=postgres
spring.datasource.password=YOUR_POSTGRES_PASSWORD_HERE

# JPA Configuration
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation=true

